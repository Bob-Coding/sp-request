{
  "editor.renderWhitespace": true,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "node_modules/": true,
    "**/*.js": { "when": "$(basename).ts"},
    "**/*.js.map": true
  },
  "files.autoSave": "onFocusChange",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 90
}