{
  "name": "sp-request",
  "version": "3.0.0-beta.0",
  "description": "Simplified SharePoint HTTP client",
  "main": "./lib/src/index.js",
  "typings": "./lib/src/index",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "test": "gulp test-ci",
    "build": "npm run lint && tsc -p .",
    "prepublishOnly": "rimraf -- lib && npm run build",
    "dev": "tsc -p . --watch",
    "lint": "eslint -c .eslintrc.json --ext .ts src test",
    "test:dev": "mocha ./test/integration/tests.ts --watch --watch-extensions ts",
    "coverage": "nyc mocha ./test/integration/tests.ts"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "report-dir": "coverage/integration",
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "full-trace": true,
    "bail": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s-KaiNet/sp-request.git"
  },
  "author": "Sergei Sergeev <sergeev.srg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/s-KaiNet/sp-request/issues"
  },
  "keywords": [
    "request",
    "sharepoint",
    "rest"
  ],
  "homepage": "https://github.com/s-KaiNet/sp-request",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^7.0.2",
    "@types/mockery": "^1.4.29",
    "@types/sinon": "^1.16.31",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "chai": "^3.5.0",
    "del": "^2.2.0",
    "eslint": "7.0.0",
    "mocha": "^7.1.2",
    "mockery": "^1.6.2",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^1.17.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.1",
    "typescript": "3.9.2"
  },
  "dependencies": {
    "@types/core-js": "^0.9.34",
    "@types/node": "^6.0.45",
    "got": "10.7.0",
    "node-sp-auth": "^3.0.0-beta.0"
  }
}
